#!/usr/bin/env bash

TO=${BASH_ARGV[0]} # the last argument

#mkdir -p $TO/{lopa,mdisp,title,abemlin,tau,clv_uvi,contr}
#mkdir -p $TO/{lopa,mdisp,title,abemlin,tau,clv_uvi}
#mkdir -p $TO/{mdisp,title,abemlin,tau,clv_uvi} # lopa change
mkdir -p $TO/{mdisp,title,abemlin,tau} # lopa change
#mkdir -p $TO/{mdisp,title,abemlin,clv_uvi} # lopa and tau change

for A in `seq 1 $[BASH_ARGC-1]`; do
  
  FROM=${BASH_ARGV[$A]}

  mv $FROM/abemlin/*.abemlin $TO/abemlin/ &> /dev/null

  mv $FROM/*.tau $TO/tau/ &> /dev/null

#  mv $FROM/tau/*.tau $TO/tau/ &> /dev/null # tau change

  mv $FROM/mdisp/*.mdisp $TO/mdisp/

#  mv $FROM/lopa/*.lopa  $TO/lopa/ # lopa change

  mv $FROM/title/*.title $TO/title/

#  mv $FROM/clv/*.clv $TO/clv_uvi/

#  mv $FROM/contr/*.contr $TO/contr/

done
