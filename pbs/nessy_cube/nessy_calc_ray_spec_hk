#!/bin/bash

clean()
{
if [[ $2 == imperial ]] || [[ $2 == dirac_leicester ]]; then

    rm -f $1/atm.inp

    files=($(ls $1))

    declare -i ln

    ln=${#files[@]}-1

    for n in $(seq 0 $ln)
    do

        if [ ! -L $1/${files[n]} ]
        then

            rm -rf $1/${files[n]}

        fi

    done

elif [[ $2 == dirac_cambridge ]]; then

##    files=($(ls $1))
#---------------------------------------
#    files=$(ls $1)

#    declare -i ln

#    ln=${#files[@]}-1

#    for n in $(seq 0 $ln)
#    do

#     for f in $files; do
#---------------------------------------

##     for f in "${files[@]}"; do

#---------------------------------------
#         f=${files[n]}
#---------------------------------------

##         if [[ "$f" == "rn.inp" ]];  then continue; fi
##         if [[ "$f" == "atm.inp" ]]; then continue; fi
##         if [[ "$f" == *.log ]];     then continue; fi

##         rm -rf $1/$f

##     done

#============================

    rm $1/cards.inp
    rm $1/CARDS.TEMPLATE
    rm $1/chem.inp
    rm $1/crs
    rm $1/datom.inp
    rm $1/fgrid.inp
    rm $1/fioss_cplink_dir
    rm $1/fioss_do2
    rm $1/fioss.exe
    rm $1/fioss_mv_results
    rm $1/fort
    rm $1/fort.19.d
    rm $1/fudge.inp
    rm $1/hminus.exe
    rm $1/mol
    rm $1/odf.inp
    rm $1/sun.inp

#    rm $1/MODFILE
#    rm $1/molconc.out.inp
#    rm $1/POPNUM
#    rm $1/RADIOC
#    rm $1/RADIOL

#    rm -r $1/JOB-*

#=============================

#for f in "$1"/*; do
#
#   echo "$f"
#
#   [[ -e $f ]]            || continue
#
#   [[ $f =~ .*rn.inp$ ]]  && continue
#
#   [[ $f =~ .*atm.inp$ ]] && continue
#
#   [[ $f =~ .*.log$ ]]    && continue
#
#   echo "$f"    
#
#   rm -rf "$f"
#
#done

fi
}

time_stamp()
{

declare -i Ns N_groups Nr
declare -i group ray

Ns=$1
N_groups=$2
Nr=$3

group=$4
ray=$5

log=$6

if ((group == 1)) && ((ray == 1)); then

    echo -n "Start of the run: " >> $log

    date >> $log

elif ((group == Ns*N_groups)) && ((ray == Nr)); then

    echo -n "End of the run:   " >> $log

    date >> $log

fi
}

#parsed by qsub or sbatch
#host
#regime
#hk_rays
#rmode
#base
#run
#atm
#flog
#slog
#spec
#ncnv
#fail
#reverse_cube_frac
#Ns
#N_groups
#Nr
#sub
#ws
#we

#set -x

splitlog=$base/$run/split.log

if [ $host == imperial ];        then module load intel-suite;            fi
if [ $host == dirac_leicester ]; then module load intel/compilers/19.0.3; fi

if [[ $host == imperial ]] || [[ $host == dirac_leicester ]]; then

#    base=/rds/general/user/rtagirov/ephemeral/runs/nessy

    tmp=$TMPDIR

    ln -s $base/$run/inp/*            $tmp

    ln -s $base/$run/fioss_do2        $tmp
    ln -s $base/$run/fioss_cplink_dir $tmp
    ln -s $base/$run/fioss_mv_results $tmp

    ln -s $base/$run/hminus.exe       $tmp
    ln -s $base/$run/fioss.exe        $tmp

fi

declare -i sub
declare -i ray_idx
declare -i x y g r
declare -i ray_number
declare -i Ns N_groups Nr
declare -i num_of_spec_wvl
declare -i reverse_cube_frac
#declare -i ray_number group_number ray_number_in_group

if [ $rmode = lte ];  then fort99=lte;     fi
if [ $rmode = nlte ]; then fort99=wrstart; fi

if [ $regime == original_run ]; then

    if [ $host == imperial ];        then g=(sub-1)*N_groups+$PBS_ARRAY_INDEX;     fi
    if [ $host == dirac_leicester ]; then g=(sub-1)*N_groups+$PBS_ARRAYID;         fi
    if [ $host == dirac_cambridge ]; then g=(sub-1)*N_groups+$SLURM_ARRAY_TASK_ID; fi

elif [ $regime = housekeeping ]; then

    hk_rays=($hk_rays)

    if [ $host == imperial ];        then ray_idx=$PBS_ARRAY_INDEX-1;     fi
    if [ $host == dirac_leicester ]; then ray_idx=$PBS_ARRAYID-1;         fi
    if [ $host == dirac_cambridge ]; then ray_idx=$SLURM_ARRAY_TASK_ID-1; fi

fi

if [ $host == imperial ];        then jobid=$PBS_JOBID;                                   fi
if [ $host == dirac_leicester ]; then jobid=$PBS_JOBID;                                   fi
if [ $host == dirac_cambridge ]; then jobid=${SLURM_ARRAY_JOB_ID}_${SLURM_ARRAY_TASK_ID}; fi

for ((r=1; r<=Nr; r+=1)); do

    if [ $regime == original_run ]; then

        ray_number=(g-1)*Nr+r

        ray_number=ray_number*reverse_cube_frac

        x=ray_number/512+1
        y=ray_number%512

        if ((y == 0)); then x=x-1; y=512; fi

#        group_number=ray_number/8192+1

#        ray_number_in_group=ray_number%8192

#        if ((ray_number_in_group == 0)); then group_number=group_number-1; ray_number_in_group=32; fi

#        rid="$group_number/$ray_number_in_group;$x.$y"
#        rid="$x.$y"

        xy=$x/$y

        time_stamp $Ns $N_groups $Nr $g $r $splitlog

#        dir=$base/$run/groups/$x/$y

    elif [ $regime == housekeeping ]; then

        xy=${hk_rays[ray_idx]}

#        rid="$xy"

#        dir=$base/$run/groups/$xy

        IFS='/' read -r -a array <<< $xy

        x=${array[0]}

        y=${array[1]}

#        rid="$x.$y"

#        dir=$base/$run/groups_hk/$x.$y
#        dir=$base/$run/groups/$x/$y

    fi

    rid="$xy"

    dir=$base/$run/groups/$xy

    if [ -d $dir ]; then rm -rf $dir; fi

    mkdir -p $dir

    if [ $host == dirac_leicester ]; then cd $tmp; fi

    if [ $host == dirac_cambridge ]; then

        tmp=$dir

        cd $tmp

        ln -s $base/$run/inp/*            $tmp

        ln -s $base/$run/fioss_do2        $tmp
        ln -s $base/$run/fioss_cplink_dir $tmp
        ln -s $base/$run/fioss_mv_results $tmp

        ln -s $base/$run/hminus.exe       $tmp
        ln -s $base/$run/fioss.exe        $tmp

    fi

    ln -s $atm/$x $tmp/atm.inp

    if [ ! -s $atm/$x ]; then

        echo "Atmospheres not found. Abort."

        exit 1

    fi

    echo $fort99 > $tmp/fort.99
    echo $y      > $tmp/rn.inp

    /usr/bin/time -v $tmp/hminus.exe > $tmp/hminus.log 2>&1

    tail -60 $tmp/hminus.log > $tmp/hminus.log.short

    rm -f $tmp/hminus.log

    mv $tmp/hminus.log.short $tmp/hminus.log

    if [ -s $tmp/hminus.log ]
    then

#        rne_fail=$(grep 'greym: RNEL does not converge' $tmp/hminus.log)

#        if [ ! "$rne_fail" ]
#        then

            conv=$(grep 'MODEL FINALLY CONVERGED' ${tmp}/hminus.log)
            lte=$(grep 'END OF LTE RUN' ${tmp}/hminus.log)

            if [ "$conv" ] || [ "$lte" ]
            then

               /usr/bin/time -v $tmp/fioss_do2 $ws 10 $we > $tmp/fioss.log 2>&1

            fi

#        fi

    fi

    if [[ $host == imperial ]] || [[ $host == dirac_leicester ]]; then

        cp -P $tmp/atm.inp $dir

        rsync -aq --no-links $tmp/ $dir/

    fi

    clean $tmp $host

    if [ ! -s $dir/hminus.log ]; then echo "$jobid: $rid: no hminus log" >> $flog; continue; fi

    nospace=$(grep -i 'No space left on device' $dir/hminus.log)

    seg_fault=$(grep -i "Segmentation fault" $dir/hminus.log)

    stale_file=$(grep -i "Stale file handle" $dir/hminus.log)

    stack_trace=$(grep -i "Stack trace terminated abnormally" $dir/hminus.log)

    rne_fail=$(grep -i 'greym: RNEL does not converge' $dir/hminus.log)

    ratconan=$(grep -i 'coma: ratco NaN' $dir/hminus.log)

    dmnan=$(grep -i 'dm NaN' $dir/hminus.log)

    library=$(grep -i 'libmkl_intel_lp64.so' $dir/hminus.log)

    malloc=$(grep -i 'malloc(): corrupted top size' $dir/hminus.log)

    file_not_found=$(grep -i 'file not found' $dir/hminus.log)

    noconv=$(grep -i 'MAX. NUMBER OF JOBS EXCEEDED' $dir/hminus.log)

    conv=$(grep -i 'MODEL FINALLY CONVERGED' $dir/hminus.log)

    lte=$(grep -i 'END OF LTE RUN' $dir/hminus.log)

    if [ "$nospace" ];                then echo "$jobid: $rid: hminus: no space" >>             $flog; continue; fi

    if [ "$seg_fault" ];              then echo "$jobid: $rid: hminus: seg fault" >>            $flog; continue; fi

    if [ "$stale_file" ];             then echo "$jobid: $rid: hminus: stale file" >>           $flog; continue; fi

    if [ "$stack_trace" ];            then echo "$jobid: $rid: hminus: stack trace" >>          $flog; continue; fi

    if [ "$rne_fail" ];               then echo "$jobid: $rid: hminus: rne" >>                  $flog; mkdir -p $fail/$x; touch $fail/$x/$y; continue; fi

    if [ "$ratconan" ];               then echo "$jobid: $rid: hminus: ratco nan" >>            $flog; mkdir -p $fail/$x; touch $fail/$x/$y; continue; fi

    if [ "$dmnan" ];                  then echo "$jobid: $rid: hminus: dm nan" >>               $flog; mkdir -p $fail/$x; touch $fail/$x/$y; continue; fi

    if [ "$library" ];                then echo "$jobid: $rid: hminus: libmkl_intel_lp64.so" >> $flog; continue; fi

    if [ "$malloc" ];                 then echo "$jobid: $rid: hminus: malloc" >>               $flog; continue; fi

    if [ "$file_not_found" ];         then echo "$jobid: $rid: hminus: file not found" >>       $flog; continue; fi

    if [ "$noconv" ];                 then echo "$jobid: $rid: hminus: no convergence" >>       $flog; mkdir -p $ncnv/$x; cp $dir/conv.out $ncnv/$x/$y; continue; fi

    if [ ! "$conv" ] && [ ! "$lte" ]; then echo "$jobid: $rid: hminus: fail" >>                 $flog; continue; fi

    if [ ! -s $dir/fioss.log ];       then echo "$jobid: $rid: no fioss log" >>                 $flog; continue; fi

    nospace=$(grep -i 'No space left on device' $dir/fioss.log | head -1)

    nan_xjc=$(grep -i "NAN XJC" $dir/fioss.log | head -1)

    seg_fault=$(grep -i "Segmentation fault" $dir/fioss.log | head -1)

    stale_file=$(grep -i "Stale file handle" $dir/fioss.log | head -1)

    stack_trace=$(grep -i "Stack trace terminated abnormally" $dir/fioss.log | head -1)

    library1=$(grep 'libmkl_intel_lp64.so' $dir/fioss.log | head -1)

    library2=$(grep 'libmkl_avx2.so' $dir/fioss.log | head -1)

    rdcsarr=$(grep -i 'RDCSARR' $dir/fioss.log | head -1)

    file_not_found=$(grep -i 'file not found' $dir/fioss.log | head -1)

    unknown=$(grep -i unknown $dir/fioss.log | head -1)

    fioss_fail=$(grep -i fail $dir/fioss.log | head -1)

    if [ "$nospace" ];         then echo "$jobid: $rid: fioss: no space" >>             $flog; continue; fi

    if [ "$nan_xjc" ];         then echo "$jobid: $rid: fioss: nan xjc" >>              $flog; continue; fi

    if [ "$seg_fault" ];       then echo "$jobid: $rid: fioss: seg fault" >>            $flog; continue; fi

    if [ "$stale_file" ];      then echo "$jobid: $rid: fioss: stale file" >>           $flog; continue; fi

    if [ "$stack_trace" ];     then echo "$jobid: $rid: fioss: stack trace" >>          $flog; continue; fi

    if [ "$library1" ];        then echo "$jobid: $rid: fioss: libmkl_intel_lp64.so" >> $flog; continue; fi

    if [ "$library2" ];        then echo "$jobid: $rid: fioss: libmkl_avx2.so" >>       $flog; continue; fi

    if [ "$rdcsarr" ];         then echo "$jobid: $rid: fioss: rdcsarr" >>              $flog; continue; fi

    if [ "$file_not_found" ];  then echo "$jobid: $rid: fioss: file not found" >>       $flog; continue; fi

    if [ "$unknown" ];         then echo "$jobid: $rid: fioss: unknown" >>              $flog; continue; fi

    if [ "$fioss_fail" ];      then echo "$jobid: $rid: fioss: fail" >>                 $flog; continue; fi

    if [ ! -s $dir/spec.out ]; then echo "$jobid: $rid: no spectrum" >>                 $flog; continue; fi

    spec_nan=$(grep -i nan $dir/spec.out | head -1)

    num_of_spec_wvl=$(cat $dir/spec.out | wc -l)

    if [ "$spec_nan" ];               then echo "$jobid: $rid: nan in spectrum" >>   $flog; continue; fi

    if ((num_of_spec_wvl != 120));    then echo "$jobid: $rid: less than 120 wvl" >> $flog; continue; fi

    echo $jobid: $rid >> $slog

    mkdir -p $spec/$x

    mv $dir/spec.out $spec/$x/$y

#    rm $dir/fioss.log
#    rm $dir/hminus.log

done

if [ $host == imperial ]; then module purge; fi
