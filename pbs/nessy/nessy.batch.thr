#!/bin/sh

mode=$1

if [ "$mode" != "0" ] && [ "$mode" != "1" ]; then echo "mode is not recognized. abort."; exit 1; fi

run=$2

w1=$4
w2=$5

st=$6
en=$7

name=$3:$st-$en

#wt=10:00:00
wt=24:00:00

ncpus=1

mem=2gb

qsub -v \
mode=$mode,\
run=$run,\
w1=$w1,\
w2=$w2 \
-J $st-$en:1 \
-o $HOME/log/$JOB_ID \
-e $HOME/log/$JOB_ID \
-N $name \
-lwalltime=$wt \
-lselect=1:ncpus=$ncpus:mem=$mem:avx2=true nessy.batch
