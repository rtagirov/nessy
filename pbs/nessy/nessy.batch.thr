#!/bin/sh

mode=$1

if [ "$mode" != "0" ] && [ "$mode" != "1" ]; then echo "mode is not recognized. abort."; exit 1; fi

run=$2

w1=$3
w2=$4

st=$5
en=$6

wt=10:00:00

nproc=1
ncpus=1

mem=6gb

qsub -v \
mode=$mode,\
run=$run,\
nproc=$nproc,\
w1=$w1,\
w2=$w2 \
-J $st-$en:1 \
-o $HOME/log/$JOB_ID \
-e $HOME/log/$JOB_ID \
-N $run:$st-$en \
-lwalltime=$wt \
-lselect=1:ncpus=$ncpus:mem=$mem:avx2=true nessy.batch
